<Window x:Class="ProjektKinofilmverwaltung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektKinofilmverwaltung"
        mc:Ignorable="d"
        Title="{Binding Titel}" Height="450" Width="800">
    <StackPanel>
        <ComboBox ItemsSource="{Binding Kinofilme}" SelectedItem="{Binding SelectedKinofilm}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Titel}"/>
                        <TextBlock Text="{Binding Genre}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>

        </ComboBox>
        <TextBlock Text="{Binding SelectedKinofilm.Titel}"/>

        <Expander Header="Neuer Kinofil">
            <StackPanel>
                <TextBlock>Titel</TextBlock>
                <TextBox Text="{Binding NeuerFilm.Titel}"></TextBox>
                <TextBlock>Genre</TextBlock>
                <TextBox Text="{Binding NeuerFilm.Genre}"></TextBox>
                <Button Click="AddNewFilm">Film hinzufügen</Button>
            </StackPanel>
            
        </Expander>

    </StackPanel>
</Window>
